<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray91" />
                    <corners android:topRightRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
            <item android:bottom="2.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:topRightRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:right="@dimen/tab_button_inset_end">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray91" />
                </shape>
            </item>
            <item android:right="@dimen/tab_button_inset_end" android:bottom="2.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray95" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>